# ðŸ”§ DIGITALOCEAN ENVIRONMENT VARIABLES
# Copy these to your DigitalOcean App Platform â†’ Settings â†’ Environment Variables

# ========== CORE APP SETTINGS ==========
NODE_ENV=production
TRADING_ENVIRONMENT=production
PORT=8080

# ========== BYBIT API KEYS ==========
# Get from: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_live_bybit_api_key_here
BYBIT_API_SECRET=your_live_bybit_api_secret_here

# Get from: https://testnet.bybit.com/app/user/api-management
BYBIT_TESTNET_API_KEY=your_testnet_bybit_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_bybit_api_secret_here

# ========== MULTI-EXCHANGE DATA (OPTIONAL - OFF BY DEFAULT) ==========
# Set to 'true' to enable external exchange data for price comparison
# Binance - Data-only price comparison (no API keys needed)
ENABLE_BINANCE_DATA=false
# OKX - Data-only price comparison (no API keys needed)  
ENABLE_OKX_DATA=false

# ========== RISK MANAGEMENT ==========
MAX_DAILY_RISK=0.02
MAX_POSITION_SIZE=0.01
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.03

# ========== SECURITY ==========
# Generate a random 32-character string for JWT tokens
SECRET_KEY=your_random_32_character_secret_key_here

# Dashboard login credentials (CHANGE THESE!)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_dashboard_password_here

# ========== DASHBOARD SETTINGS ==========
ENABLE_DASHBOARD=true
DASHBOARD_PORT=8080

# ========== DEPLOYMENT SETTINGS ==========
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# ========== OPTIONAL: ML FEATURES ==========
ENABLE_ML_PREDICTIONS=false
ML_MODEL_UPDATE_FREQUENCY=3600

# ========== OPTIONAL: ADVANCED FEATURES ==========
ENABLE_PAPER_TRADING=false
LOG_LEVEL=INFO
CACHE_EXPIRY_SECONDS=300

# NOTE: For DigitalOcean App Platform, add each variable individually
# Go to: App â†’ Settings â†’ Environment Variables â†’ Add Variable
# Key: BYBIT_API_KEY | Value: your_live_bybit_api_key_here
# Repeat for each variable above