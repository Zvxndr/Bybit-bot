# DigitalOcean App Platform Environment Variables
# Copy these to your DigitalOcean App → Settings → Environment Variables
# No SSH, No Email - Just Trading Bot Deployment

# =============================================================================
# TRADING ENVIRONMENT
# =============================================================================
NODE_ENV=production
TRADING_ENVIRONMENT=production
DEBUG=false
PORT=8080

# =============================================================================
# BYBIT LIVE TRADING API (Replace with your actual keys)
# =============================================================================
BYBIT_API_KEY=your_live_bybit_api_key_here
BYBIT_API_SECRET=your_live_bybit_api_secret_here
BYBIT_TESTNET=false

# =============================================================================
# BYBIT TESTNET API (Replace with your actual keys)
# =============================================================================
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_secret_here

# =============================================================================
# MULTI-EXCHANGE DATA INTEGRATION (Optional - OFF by default for production)
# =============================================================================
# Binance data-only integration (no API keys needed) - Set to 'true' to enable
ENABLE_BINANCE_DATA=false
# OKX data-only integration (no API keys needed) - Set to 'true' to enable
ENABLE_OKX_DATA=false
MULTI_EXCHANGE_CACHE_TTL=30
PRICE_COMPARISON_ENABLED=true
CROSS_EXCHANGE_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT

# =============================================================================
# RISK MANAGEMENT (Conservative Settings)
# =============================================================================
MAX_DAILY_RISK=0.02
MAX_POSITION_SIZE=0.01
EMERGENCY_STOP_LOSS=0.05
ENABLE_STOP_LOSS=true
DEFAULT_STOP_LOSS=0.02
DEFAULT_TAKE_PROFIT=0.04

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_random_secret_key_minimum_32_characters_long_here

# Dashboard Login (IMPORTANT: Change from defaults!)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_dashboard_password_change_this

# =============================================================================
# DASHBOARD AUTHENTICATION (Optional)
# =============================================================================
DASHBOARD_PASSWORD=secure_trading_2025

# =============================================================================
# NOTES FOR DIGITALOCEAN APP PLATFORM
# =============================================================================
# 1. Add each variable above through DigitalOcean App Settings
# 2. Click "Add Variable" for each one
# 3. Replace "your_xxx_here" with actual values
# 4. Save and the app will auto-redeploy
# 5. Access your bot at: https://your-app-name.ondigitalocean.app