# Essential Environment Variables for Production
# Copy these to your DigitalOcean App Platform environment variables

# =============================================================================
# BYBIT LIVE TRADING API (Required for real money trading)
# =============================================================================
BYBIT_API_KEY=your_live_api_key_from_bybit_com
BYBIT_API_SECRET=your_live_api_secret_from_bybit_com
BYBIT_TESTNET=false

# =============================================================================
# BYBIT TESTNET API (Optional - for strategy testing)
# =============================================================================
BYBIT_TESTNET_API_KEY=your_testnet_key_from_testnet_bybit_com
BYBIT_TESTNET_API_SECRET=your_testnet_secret_from_testnet_bybit_com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
TRADING_ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=your_random_secret_key_minimum_32_characters_long

# =============================================================================
# RISK MANAGEMENT (Recommended Settings)
# =============================================================================
MAX_DAILY_RISK=0.02
MAX_POSITION_SIZE=0.01
EMERGENCY_STOP_LOSS=0.05
ENABLE_STOP_LOSS=true
DEFAULT_STOP_LOSS=0.02
DEFAULT_TAKE_PROFIT=0.04

# =============================================================================
# MULTI-EXCHANGE DATA SOURCES (Data Only - No Trading)
# =============================================================================
# Enable cross-exchange data collection for better market analysis
ENABLE_BINANCE_DATA=true
ENABLE_OKX_DATA=true
MULTI_EXCHANGE_CACHE_TTL=30

# Cross-exchange analysis settings (arbitrage detection disabled for now)
# TODO: ARBITRAGE_MIN_PROFIT_BPS will be implemented in Trust/PTY LTD version
PRICE_COMPARISON_ENABLED=true
CROSS_EXCHANGE_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT

# =============================================================================
# DATABASE & LOGGING
# =============================================================================
DATABASE_URL=sqlite:///data/trading_bot.db
LOG_LEVEL=INFO
LOG_DIRECTORY=/app/logs