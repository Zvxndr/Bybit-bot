# Production Environment Configuration
# ⚠️ CRITICAL: This file contains live trading credentials
# Keep secure and never commit to version control

# === BYBIT LIVE TRADING CONFIGURATION ===
BYBIT_API_KEY="your_live_api_key_here"
BYBIT_API_SECRET="your_live_api_secret_here"
BYBIT_TESTNET=false
BYBIT_RECV_WINDOW=5000

# === DATABASE CONFIGURATION ===
# PostgreSQL (Production Database)
DATABASE_URL="postgresql://trading_user:secure_password@your-db-host:25060/trading_prod?sslmode=require"
DB_HOST="your-db-host.db.ondigitalocean.com"
DB_PORT=25060
DB_NAME="trading_prod"
DB_USER="trading_user"
DB_PASSWORD="your_secure_db_password"

# Redis Cache
REDIS_URL="redis://:redis_password@your-redis-host:25061/0"
REDIS_PASSWORD="your_secure_redis_password"

# === SECURITY CONFIGURATION ===
SECRET_KEY="generate_a_256_bit_secret_key_here"
JWT_SECRET="generate_jwt_secret_here"
API_RATE_LIMIT="100/hour"
ENCRYPTION_KEY="generate_32_byte_encryption_key"

# === AUSTRALIAN COMPLIANCE ===
TIMEZONE="Australia/Sydney"
TAX_COMPLIANCE_MODE="production"
ATO_REPORTING_ENABLED=true
FINANCIAL_YEAR_START="07-01"  # July 1st
TAX_CALCULATION_METHOD="FIFO"
RECORD_RETENTION_YEARS=7

# === TRADING RISK MANAGEMENT ===
MAX_POSITION_SIZE=0.1          # 10% of account per position
MAX_DAILY_TRADES=50            # Limit overtrading
MAX_DAILY_LOSS=1000.00         # AUD daily loss limit
STOP_LOSS_PERCENT=0.02         # 2% stop loss
TAKE_PROFIT_PERCENT=0.04       # 4% take profit
COOLDOWN_PERIOD=300            # 5 minutes between trades
EMERGENCY_STOP_THRESHOLD=0.05  # 5% account drawdown triggers emergency stop

# === MONITORING & ALERTS ===
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME="your_alert_email@gmail.com"
SMTP_PASSWORD="your_app_password"
ALERT_EMAIL="your_alerts@domain.com"

# Slack Integration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_CHANNEL="#trading-alerts"

# SMS Alerts (Australian number)
TWILIO_ACCOUNT_SID="your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_token"
TWILIO_PHONE_NUMBER="+61412345678"
ALERT_PHONE_NUMBER="+61487654321"

# === PERFORMANCE MONITORING ===
LOG_LEVEL="INFO"
LOG_FILE="/app/logs/trading_prod.log"
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# === BACKUP & RECOVERY ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET="trading-backups-prod"
AWS_ACCESS_KEY_ID="your_aws_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret"
AWS_REGION="ap-southeast-2"  # Sydney region

# === API CONFIGURATION ===
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS="https://your-domain.com"

# === EXTERNAL SERVICE URLS ===
BYBIT_API_URL="https://api.bybit.com"
BYBIT_WS_URL="wss://stream.bybit.com"

# === DEPLOYMENT CONFIGURATION ===
ENV=production
DEBUG=false
TESTING=false
DEPLOYMENT_DATE="2025-10-08"
VERSION="1.0.0"

# === GRAFANA DASHBOARD ===
GRAFANA_PASSWORD="secure_grafana_password"
GRAFANA_URL="https://your-domain.com:3000"

# === DIGITAL OCEAN CONFIGURATION ===
DO_SPACES_KEY="your_do_spaces_key"
DO_SPACES_SECRET="your_do_spaces_secret"
DO_SPACES_ENDPOINT="https://syd1.digitaloceanspaces.com"
DO_SPACES_BUCKET="trading-data-backup"

# === SSL/TLS CONFIGURATION ===
SSL_CERT_PATH="/etc/letsencrypt/live/your-domain.com/fullchain.pem"
SSL_KEY_PATH="/etc/letsencrypt/live/your-domain.com/privkey.pem"

# === ADDITIONAL SECURITY ===
ALLOWED_HOSTS="your-domain.com,localhost,127.0.0.1"
CSRF_TRUSTED_ORIGINS="https://your-domain.com"
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# === FEATURE FLAGS ===
ENABLE_LIVE_TRADING=true
ENABLE_PAPER_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_ML_PREDICTIONS=true
ENABLE_AUTO_SCALING=true

# === MAINTENANCE WINDOWS ===
MAINTENANCE_MODE=false
MAINTENANCE_START_TIME="02:00"  # 2 AM AEDT
MAINTENANCE_END_TIME="03:00"    # 3 AM AEDT