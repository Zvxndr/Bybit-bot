# Bybit Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here
BYBIT_TESTNET=true

# =============================================================================
# Trading Configuration
# =============================================================================
TRADING_ENABLED=false
DEFAULT_SYMBOL=BTCUSDT
POSITION_SIZE=0.001
MAX_POSITION_SIZE=0.01
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=3.0

# =============================================================================
# Risk Management
# =============================================================================
MAX_DAILY_LOSS=100.0
MAX_DRAWDOWN_PERCENTAGE=10.0
RISK_PER_TRADE=1.0
MAX_CONCURRENT_POSITIONS=3

# =============================================================================
# ML Model Configuration
# =============================================================================
ML_MODEL_UPDATE_INTERVAL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.7
FEATURE_LOOKBACK_PERIOD=100
MODEL_TRAINING_FREQUENCY=daily

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///trading_bot.db
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=trading_data
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=your_password_here

# =============================================================================
# Dashboard Configuration
# =============================================================================
DASHBOARD_BACKEND_PORT=8001
DASHBOARD_FRONTEND_PORT=3000
WEBSOCKET_URL=ws://localhost:8001/ws
API_BASE_URL=http://localhost:8001

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
ENABLE_PERFORMANCE_MONITORING=true
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your_secret_key_here_generate_a_strong_one
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# Performance Settings
# =============================================================================
MAX_WORKERS=4
ASYNC_EXECUTOR_THREADS=8
CACHE_TTL=300
REQUEST_TIMEOUT=30

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
TESTING=false
DEV_MODE=false
MOCK_TRADING=true