# Bybit Trading Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Bybit API Credentials - TESTNET (for development/staging)
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_api_secret_here

# Bybit API Credentials - LIVE TRADING (for production only)
# WARNING: Never use live credentials in development/staging environments
BYBIT_LIVE_API_KEY=your_live_api_key_here
BYBIT_LIVE_API_SECRET=your_live_api_secret_here

# Database Configuration (Production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trader
DB_PASSWORD=your_secure_password_here

# Email Alerts (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL=alerts@yourdomain.com

# Environment
ENVIRONMENT=development  # Options: development, production

# Security (Production)
SECRET_KEY=your_secret_key_for_sessions
JWT_SECRET=your_jwt_secret_for_auth

# Optional: Override config values
# TRADING_MODE=aggressive
# DEBUG=true