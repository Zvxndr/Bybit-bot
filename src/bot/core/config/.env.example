# Environment Variables Template
# Copy this file to .env and configure your values

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
ENVIRONMENT=development

# ============================================================================
# BYBIT EXCHANGE CREDENTIALS
# ============================================================================

# Development/Testnet Credentials
BYBIT_DEVELOPMENT_API_KEY=your_testnet_api_key_here
BYBIT_DEVELOPMENT_API_SECRET=your_testnet_api_secret_here

# Staging/Testnet Credentials  
BYBIT_STAGING_API_KEY=your_staging_api_key_here
BYBIT_STAGING_API_SECRET=your_staging_api_secret_here

# Production/Live Credentials (HANDLE WITH EXTREME CARE)
BYBIT_LIVE_API_KEY=your_live_api_key_here
BYBIT_LIVE_API_SECRET=your_live_api_secret_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trader
DB_PASSWORD=your_database_password_here

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your_secret_key_here_generate_a_strong_random_key
JWT_SECRET=your_jwt_secret_for_api_authentication

# ============================================================================
# EMAIL CONFIGURATION (for alerts and notifications)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here
ALERT_EMAIL=alerts@example.com

# ============================================================================
# REDIS CONFIGURATION (if using Redis cache)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# MONITORING AND EXTERNAL SERVICES
# ============================================================================

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ============================================================================
# DEVELOPMENT/TESTING FLAGS
# ============================================================================
DEBUG=false
TESTING=false
MOCK_API_RESPONSES=false

# ============================================================================
# PRODUCTION FLAGS
# ============================================================================
PRODUCTION=false

# Set to true only when deploying to production
# This will enforce additional security measures
ENABLE_PRODUCTION_MODE=false

# ============================================================================
# USAGE NOTES
# ============================================================================
# 1. Copy this file to .env in your project root
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit the .env file to version control
# 4. Use different .env files for different environments:
#    - .env.development
#    - .env.staging  
#    - .env.production
# 5. Set appropriate file permissions (600) for security
# 6. For production, consider using a secrets management service
# 7. Rotate credentials regularly, especially for production